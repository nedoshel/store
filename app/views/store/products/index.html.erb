<% content_for :title, t(".title") %>

<div class="text-center p-10">
    <h1 class="font-bold text-4xl mb-4"><%= t ".title" %></h1>
    <!--h1 class="text-3xl">Tailwind CSS</h1-->
</div>

<section id="products" class="w-fit mx-auto grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 justify-items-center justify-center gap-y-20 gap-x-14 mt-10 mb-5">
  <% @products.each do |product| %>
    <%= render product %>
  <% end %>
</section>

<% if authenticated? %>
  <div class="text-center p-10">
    <%= link_to t(".add_product"), 
                new_store_product_path, 
                class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  </div>
<% end %>
