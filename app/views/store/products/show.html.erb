<div class="bg-gray-100 dark:bg-gray-800 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row -mx-4">
            <div class="md:flex-1 px-4">
                <% if @product.featured_image.present? %>
                  <div class="h-[460px] rounded-lg bg-gray-300 dark:bg-gray-700 mb-4">
                    <%= image_tag @product.featured_image,  class: "w-full h-full object-cover" %>
                  </div>
                <% end %>
                
                <div class="flex -mx-2 mb-4">
                  <div class="w-1/2 px-2">
                    <%= link_to t('.edit'), 
                                edit_store_product_path(@product), 
                                class: "w-full bg-gray-900 dark:bg-gray-600 text-white py-2 px-4 rounded-full font-bold hover:bg-gray-800 dark:hover:bg-gray-700 inline-block text-center" %>
                  </div>
                  <div class="w-1/2 px-2">
                    <%= button_to t('.delete'), 
                                  store_product_path(@product),
                                  method: :delete, 
                                  data: { turbo_confirm: t(".confirm_deletion") }, 
                                  class: "w-full bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white py-2 px-4 rounded-full font-bold hover:bg-gray-300 dark:hover:bg-gray-600 inline-block text-center" %>
                  </div>
                </div>
            </div>
            <div class="md:flex-1 px-4">
                <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-2"><%= @product.name %></h2>

                <%= render "inventory", product: @product %>

                <div class="mb-4">
                  <br>
                  <span class="font-bold text-gray-700 dark:text-gray-300"><%= t(".description") %></span>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mt-2">
                      <%= @product.description.to_plain_text %>
                  </p>
                </div>
            </div>
        </div>



        <div id="accordion-collapse" data-accordion="collapse" class="flex-col -mx-4">
          <h2 id="accordion-collapse-heading-3">
            <button type="button" class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3" data-accordion-target="#accordion-collapse-body-3" aria-expanded="false" aria-controls="accordion-collapse-body-3">
              <span class="w-full text-center"><%= t(".full_description") %></span>
              <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
              </svg>
            </button>
          </h2>
          <div id="accordion-collapse-body-3" class="hidden" aria-labelledby="accordion-collapse-heading-3">
            <div class="p-5 border border-t-0 border-gray-200 dark:border-gray-700">
              <%= @product.description %>
            </div>
          </div>
        </div>

    </div>
</div>
        