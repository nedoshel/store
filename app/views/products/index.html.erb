<% content_for :title, t(".title") %>

<div class="text-center p-10">
    <h1 class="font-bold text-4xl mb-4"><%= t ".title" %></h1>
</div>

<section id="products" class="w-fit mx-auto grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 justify-items-center justify-center gap-y-20 gap-x-14 mt-10 mb-5">
  <% @products.each do |product| %>
    <%= render product, wishlist_product_ids: @wishlist_product_ids %>
  <% end %>
</section>
