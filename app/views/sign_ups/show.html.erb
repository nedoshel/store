<h1 class="text-3xl font-bold text-center">
  <%= t(".title") %>
</h1>

<%= form_with model: @user, url: sign_up_path, class: "max-w-md mx-auto" do |form| %>
  <% if form.object.errors.any? %>
    <div>Error: <%= form.object.errors.full_messages.first %></div>
  <% end %>

  <div class="relative z-0 w-full mb-5 group">
    <%= form.text_field :first_name, required: true, placeholder: "", class: text_field_class %>
    <%= form.label :first_name, class: label_class %>
  </div>

  <div class="relative z-0 w-full mb-5 group">
    <%= form.text_field :last_name, required: true, placeholder: "", class: text_field_class %>
    <%= form.label :last_name, class: label_class %>
  </div>

  <div class="relative z-0 w-full mb-5 group">
    <%= form.email_field :email_address, required: true, placeholder: "",  autocomplete: :email, class: text_field_class %>
    <%= form.label :email_address, class: label_class %>
  </div>

  <div class="relative z-0 w-full mb-5 group">
    <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "", class: text_field_class %>
    <%= form.label :password, class: label_class %>
  </div>

  <div class="relative z-0 w-full mb-5 group">
    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "", class: text_field_class %>
    <%= form.label :password_confirmation, class: label_class %>
  </div>

  <div>
    <%= form.submit t(".submit"), class: submit_class %>
  </div>
<% end %>
